<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/category"
        android:textSize="30sp"
        app:fontFamily="sans-serif-smallcaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCasual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/casual"
        app:layout_constraintBottom_toBottomOf="@+id/buttonDating"
        app:layout_constraintEnd_toStartOf="@+id/buttonDating"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonDating"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonFormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/formal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonCasual"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonCasual"
        app:layout_constraintTop_toTopOf="@+id/buttonDinner"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonDating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="32dp"
        android:text="@string/dating"
        app:layout_constraintBottom_toTopOf="@+id/buttonDinner"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonDinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:text="@string/dinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonDating"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonDating" />
</androidx.constraintlayout.widget.ConstraintLayout>